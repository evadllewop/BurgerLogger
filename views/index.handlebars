<header class="headerStyle">
    <div>
        <img src="/assets/img/edb_logo.png" class="logo" alt="">
    </div>
</header>

<div class="container">
    <div class="row">
        <div class="col-md-6">

            <h2>Burgers to Devour!</h2>
            <hr>

            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{>burgers/burger-block devoured=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>



        <div class="col-md-6">
            <h2>Burgers Devoured!</h2>
            <hr>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{>burgers/burger-block devoured=false}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <hr>

    <h2>Add a Burger</h2>
    <form class="create-form">
        <div class="form-group">
            <label for="burgerName">Burger Name:</label>
            <input type="text" id="burgerName" name="name">

            <div class="form-group">
                <label for="devoured">Devoured?</label><br>
                <input type="radio" name="devoured" value="1" checked> Devoured!<br>
                <input type="radio" name="devoured" value="0"> Not Devoured!
            </div>

            <button type="submit" class="btn">Add Burger</button>
    </form>